<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BunBon</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="shortcut icon" href="/src/favicon.ico" type="image/x-icon" />
  </head>
  <body style="overflow-x: hidden">
    <div id="preloader">
      <div class="spinner"></div>
    </div>
    <!-- BARRA DE NAVEGACION -->
    <nav class="navbar navbar-expand-lg bg-white shadow-sm fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand icon-nav" href="<%= route('home')%>">
          <img
            src="/src/SVG/bunbon-logo-icon-nav.svg"
            alt="Logo"
            width="40"
            height="40"
            class="d-inline-block align-text-top"
          />
        </a>
        <button
          class="navbar-toggler"
          id="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon" id="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a
                class="nav-link active nav-direcciones"
                aria-current="page"
                href="<%= route('about')%>"
                ><span class="chocolate-text">Qué somos</span></a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link active nav-direcciones-actual"
                aria-current="page"
                href="<%= route('contact')%>"
                ><span class="main-text">Contáctanos</span></a
              >
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle nav-direcciones"
                href="#"
                id="navbarDropdown"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
                ><span class="chocolate-text">Tiendas</span>
              </a>
              <ul
                class="dropdown-menu custom-dropdown-menu"
                aria-labelledby="navbarDropdown"
              >
                <li>
                  <a
                    class="dropdown-item nav-sub-direcciones"
                    href="<%= route('physicalStores')%>"
                    ><span class="chocolate-text">Físicas</span></a
                  >
                </li>
                <li>
                  <a
                    class="dropdown-item nav-sub-direcciones"
                    href="<%= route('onlineStores')%>"
                    ><span class="chocolate-text">Online</span></a
                  >
                </li>
              </ul>
            </li>
          </ul>
          <button
            class="btn btn-primary custom-button-pedido px-4 ms-auto"
            id="custom-button-pedido"
          >
            <img
              src="/src/SVG/pedido-icon.svg"
              alt="Buscar"
              width="25"
              height="25"
              class="me-2 pedido-icon"
            />
            Haz tu pedido
          </button>
        </div>
      </div>
    </nav>
    <!-- CONTENIDO -->
    <section class="section-contactos fade-in">
      <div class="row vh-100">
        <div class="ps-lg-5 col-lg-8 container-contactos">
          <h1 class="text-center text-lg-start">Contacta con Nosotros</h1>
          <form class="formulario" method="post" action="/Form">
            <div class="mb-3">
              <label for="name" class="form-label">Nombre</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Tu nombre"
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Correo Electrónico</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                placeholder="Tu correo electrónico"
              />
            </div>
            <div class="mb-3">
              <label for="subject" class="form-label">Asunto</label>
              <input
                type="text"
                class="form-control"
                id="subject"
                name="subject"
                placeholder="Asunto"
              />
            </div>
            <div class="mb-3">
              <label for="message" class="form-label">Mensaje</label>
              <textarea
                class="form-control"
                id="message"
                name="message"
                rows="4"
                placeholder="Tu mensaje"
                style="resize: none; height: 300px"
              ></textarea>
            </div>
            <div class="mb-3 d-flex align-items-center form-check">
              <input
                type="checkbox"
                class="form-check-input"
                id="terms"
                name="terms"
                required
              />
              <label class="form-check-label" for="terms">
                Acepto los
                <a href="/terms-and-conditions" target="_blank"
                  >términos y condiciones</a
                >
              </label>
            </div>
            <button
              type="submit"
              class="btn btn-primary custom-button-contacto"
            >
              Enviar
            </button>
          </form>
        </div>
        <div class="col-lg-4 imagen-contactos">
          <div class="olas4"></div>
          <div class="olas4-responsive"></div>
        </div>
      </div>
    </section>

    <!-- Modal de Errores -->
    <div
      class="modal fade"
      id="errorModal"
      tabindex="-1"
      aria-labelledby="errorModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="errorModalLabel">
              Errores en el Formulario
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <ul id="errorList"></ul>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cerrar
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap scripts -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SCRIPTS PROPIOS -->
    <script src="/js/DOM.js"></script>
    <script src="/js/ValidarForm.js"></script>
  </body>
</html>
